<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="343dp"
    android:layout_height="44dp"
    android:alpha="1"
    android:background="@drawable/phoneinputtangle"
    >

    <EditText
        android:id="@+id/passwordaccount"
        android:maxLength="14"

        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:fontFamily="@font/notosanssc_black"
        android:hint="6-14位密码"
        android:inputType="textPassword"
        android:lineSpacingExtra="7.2sp"
        android:paddingLeft="14dp"
        android:textColor="@color/black"
        android:textColorHint="#D8D8D8"
        android:textFontWeight="400"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/notseeicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="19dp"
        android:src="@drawable/notseeicon">

    </ImageView>

</RelativeLayout>
